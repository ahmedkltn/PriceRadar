# Server-side Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# Database Configuration
# ============================================
POSTGRES_DB=priceradar
POSTGRES_USER=priceradar
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ============================================
# Airflow Database Configuration
# ============================================
PG_USER=priceradar
PG_PASSWORD=your_secure_password_here
PG_HOST=postgres
PG_PORT=5432
PG_APPDB=priceradar
PG_AIRFLOW_DB=airflow

# ============================================
# Airflow Configuration
# ============================================
AIRFLOW_UID=50000
_AIRFLOW_WWW_USER_USERNAME=airflow
_AIRFLOW_WWW_USER_PASSWORD=airflow

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# Django Configuration
# ============================================
# Django Secret Key (generate a new one for production!)
# You can generate one using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-this-to-a-random-secret-key-in-production

# ============================================
# JWT Configuration
# ============================================
# Access token lifetime in minutes
JWT_ACCESS_TOKEN_LIFETIME=15
# Refresh token lifetime in days
JWT_REFRESH_TOKEN_LIFETIME=7

# ============================================
# Email Configuration (SMTP - Brevo/Sendinblue)
# ============================================
# Leave empty to use console backend for development
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username_here
SMTP_PASS=your_smtp_password_here
EMAIL_FROM=PriceRadar <noreply@priceradar.tn>
CONTACT_EMAIL=admin@priceradar.tn

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_URL=http://localhost:6080
